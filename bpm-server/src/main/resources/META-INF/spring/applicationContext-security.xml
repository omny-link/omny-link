    </http>
    <!-- Configure Authentication mechanism -->
    <beans:bean id="corsFilter" class="org.activiti.spring.rest.cors.CorsFilter">
       <beans:property name="allowedOrigins" value="${allowedOrigins}"/>
    </beans:bean>
    <beans:bean id="corsPreAuthFilter" class="org.activiti.spring.rest.cors.PreAuthCorsFilter">
       <beans:property name="authenticationManager" ref="authenticationManager"/>
    </beans:bean>
    <beans:bean id="preauthAuthProvider" class="org.springframework.security.web.authentication.preauth.PreAuthenticatedAuthenticationProvider">
        <beans:property name="preAuthenticatedUserDetailsService">
            <beans:bean id="userDetailsServiceWrapper"  class="org.springframework.security.core.userdetails.UserDetailsByNameServiceWrapper">
                <beans:property name="userDetailsService" ref="preAuthUserDetailsService"/>
            </beans:bean>
        </beans:property>
    </beans:bean>

    <authentication-manager alias="authenticationManager">
        <authentication-provider ref="preauthAuthProvider"/>

        <!-- -->
        <authentication-provider>
            <password-encoder hash="sha-256" />
            <user-service>
                <user name="admin" password="8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918" authorities="ROLE_ADMIN" />
                <user name="user" password="04f8996da763b7a969b1028ee3007569eaf3a635486ddab211d512c85b9df8fb" authorities="ROLE_USER" />
            </user-service>
        </authentication-provider>
        
        <authentication-provider user-service-ref="externalUserDetailsService"></authentication-provider>
    </authentication-manager>
    <beans:bean class="org.activiti.spring.auth.ActivitiUserDetailsService" id="externalUserDetailsService"/>
    <beans:bean id="preAuthUserDetailsService" class="org.activiti.spring.auth.ActivitiUserDetailsService"/>
    <beans:bean id="http403EntryPoint" class="org.springframework.security.web.authentication.Http403ForbiddenEntryPoint"/>
     
</beans:beans>
