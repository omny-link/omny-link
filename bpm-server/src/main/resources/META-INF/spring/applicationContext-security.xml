<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" 
    xmlns:beans="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    <!-- HTTP security configurations -->
    <http auto-config="true" use-expressions="true">
        <custom-filter ref="corsFilter" after="PRE_AUTH_FILTER"/>
        <custom-filter position="PRE_AUTH_FILTER" ref="corsPreAuthFilter" />     
        <logout logout-success-url="/" />

        <!-- Configure these elements to secure URIs in your application -->
        <intercept-url pattern="/choices/**" access="hasRole('ROLE_ADMIN')" />
        <intercept-url pattern="/member/**" access="isAuthenticated()" />
        <intercept-url pattern="/resources/**" access="permitAll" />
        <intercept-url pattern="/css/**" access="permitAll" />
        <intercept-url pattern="/js/**" access="permitAll" />
        <intercept-url pattern="/login/**" access="permitAll" />

        <intercept-url pattern="/deployments/**" access="isAuthenticated()" />
        <intercept-url pattern="/process-definitions/**" access="isAuthenticated()" />
        <intercept-url pattern="/process-instances/**" access="isAuthenticated()" />
        <intercept-url pattern="/tasks/**" access="isAuthenticated()" />

        <intercept-url pattern="/activitys/**" access="isAuthenticated()" />
        <intercept-url pattern="/contacts/**" access="isAuthenticated()" />
    <http-basic />
        
